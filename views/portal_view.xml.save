            <li t-if="page_name == 'post'" t-attf-class="breadcrumb-item #{'active ' if not post_lines else ''}">
                <a t-if="post_lines">Portal de Viajes</a>
                <t t-else="">Portal de Viajes</t>
            </li>
        </xpath>
    </template>


